<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_i_n_all_view"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <!--招标标题-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/l_i_n_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/myBlack"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/l_i_n_mini_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/l_i_n_mini_image_view"
        tools:text="这是一段资讯标题..." />

    <!--图片信息-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/l_i_n_mini_image_view"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/bg_card_info_yellow" />
    <!--图片信息-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/l_i_n_image_radius"
        android:layout_width="122dp"
        android:layout_height="92dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/bg_image_radius_home" />

    <!--发布来源-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/l_i_n_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="4dp"
        android:textColor="@color/myGrayDark"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="@+id/l_i_n_mini_image_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="来源于互联网" />

    <!--发布时间-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/l_i_n_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:textColor="@color/myGrayDark"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="@+id/l_i_n_mini_image_view"
        app:layout_constraintEnd_toStartOf="@+id/l_i_n_mini_image_view"
        tools:text="2021-04-11" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/myBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>